TG_BOT_TOKEN=123456789:YOUR_BOT_TOKEN
TG_CHAT_ID=123456789

# Optional: lock config commands (/set, /unset) to a specific user id (useful in group chats)
# TG_ADMIN_USER_ID=123456789

# How often to poll Telegram for config commands
TG_COMMAND_POLL_MS=5000

# Runtime overrides set via /set are stored here
RUNTIME_CONFIG_FILE=config/runtime.json

# Polling
POLL_INTERVAL_MS=60000
REQUEST_TIMEOUT_MS=30000

# Alerts
MAX_ALERTS_PER_CYCLE=10
ALERT_COOLDOWN_MS=1800000

# Optional proxy for Polymarket requests
# PROXY_URL=http://user:pass@host:port
PROXY_URL=

# Polymarket scan
POLYMARKET_BASE_URL=https://gamma-api.polymarket.com
POLYMARKET_CATEGORY=
POLYMARKET_EVENTS_LIMIT=600
POLYMARKET_PAGE_SIZE=50
POLYMARKET_REQ_DELAY_MS=500
POLYMARKET_MAX_RETRIES=5
POLYMARKET_RETRY_BASE_MS=750
POLYMARKET_MIN_LIQUIDITY=0
MARKET_ENDDATE_MAX_PAST_HOURS=12

# Signals
ENABLE_VOLUME_SPIKE=true
ENABLE_BIG_BUY=true
ENABLE_NEW_MARKET=true

# 1) Volume spike: alert if volume increased by this USD amount over last 30 minutes
VOLUME_SPIKE_USD_30M=5000
# ...and also at least this fraction of total volume (e.g. 0.01 = 1%)
VOLUME_SPIKE_MIN_PCT_TOTAL_30M=0.01

# 2) Big buy proxy: alert if volume over last 10 minutes is high AND price moved a lot
BIG_BUY_USD_10M=5000
# ...and also at least this fraction of total volume (e.g. 0.01 = 1%)
BIG_BUY_MIN_PCT_TOTAL_10M=0.01
PRICE_MOVE_ABS_10M=0.08

# 3) New market: when first seen, alert if it already has high volume/liquidity
NEW_MARKET_MIN_VOLUME_USD=20000
NEW_MARKET_MIN_LIQUIDITY_USD=0

# State
STATE_FILE=data/state.json
STATE_RETENTION_MINUTES=180

DEBUG=false
